{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sites_MCSC_Authorization_name": {
            "type": "string",
            "defaultValue": "mcsc-clientapi-dev"
        },
        "DOC_DB": {
            "type": "string"
        },
        "APP_INSIGHTS_KEY": {
            "type": "string"
        },
        "AUTH_KEY": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Web/Sites",
            "apiVersion": "2015-08-01",
            "name": "[parameters('sites_MCSC_ClientAPI_name')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "name": "[parameters('sites_MCSC_Authorization_name')]",
                "siteConfig": {
                    "phpVersion": "off",
                    "appSettings": [
                        {
                            "Name": "DOC_DB",
                            "Value": "[parameters('DOC_DB')]"
                        },
                        {
                            "Name": "AUTH_KEY",
                            "Value": "[parameters('AUTH_KEY')]"
                        },
                        {
                            "Name": "APP_INSIGHTS_KEY",
                            "Value": "[parameters('APP_INSIGHTS_KEY')]"
                        }
                    ]
                }
            }
        }
    ]
}